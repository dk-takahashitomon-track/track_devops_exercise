name: OWASP Dependency Scan

on:
  push:
    paths:
      - requirements.txt
  pull_request:
    paths:
      - requirements.txt

jobs:
  depscan:
    name: Run OWASP dep-scan
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Install OWASP dep-scan
        run: pip install owasp-depscan

      - name: Run dep-scan
        run: |
          mkdir -p reports
          depscan --src . --type python --report_file reports/depscan.json

      - name: Check for vulnerabilities
        run: |
          if grep -q '"severity": "high"' reports/depscan.json; then
            echo "❌ High severity vulnerabilities found!"
            exit 1
          else
            echo "✅ No high severity vulnerabilities found."
          fi
